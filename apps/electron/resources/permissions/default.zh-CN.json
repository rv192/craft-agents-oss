    { "pattern": "^ll\\b", "comment": "长列表显示（ls -l 别名）" },
    { "pattern": "^la\\b", "comment": "列出全部文件（含隐藏文件，ls -la 别名）" },
    { "pattern": "^tree\\b", "comment": "显示目录树结构" },
    { "pattern": "^file\\b", "comment": "识别文件类型" },
    { "pattern": "^stat\\b", "comment": "显示文件状态与元数据" },
    { "pattern": "^du\\b", "comment": "估算文件/目录磁盘占用" },
    { "pattern": "^df\\b", "comment": "报告文件系统磁盘空间使用情况" },
    { "pattern": "^wc\\b", "comment": "统计文件行数、词数与字节数" },
    { "pattern": "^head\\b", "comment": "输出文件开头内容" },
